#!/usr/bin/env bash
#
# Linux run_once (pre-package)
#

set -euo pipefail

################################################################################
# BEGIN
################################################################################

echo -e "${_CYAN_}Starting Linux run_once (pre-package)${_RESET_}"

################################################################################
# sudo
################################################################################

# Set passwordless sudo for default WSL user
sudo sh -c "echo $USER 'ALL=(ALL:ALL) NOPASSWD: ALL' > /etc/sudoers.d/$USER"

################################################################################
# END
################################################################################

echo -e "${_CYAN_}Starting Linux run_once (pre-package)${_RESET_}"

