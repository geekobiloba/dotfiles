#!/bin/sh
#
# Podman setup
#

################################################################################
# podman-docker
################################################################################

printf '%b' "${_CYAN_}Silencing podman-docker ... "

sudo -E touch /etc/containers/nodocker

echo -e "done${_RESET_}"

################################################################################
# podman minimum allowed port
################################################################################

printf '%b' "${_CYAN_}Setting podman minimum allowed port... "

sudo touch /etc/sysctl.conf

sudo augtool -r /etc/ -bAt 'Sysctl.lns incl /sysctl.conf' <<'EOF'
defvar conf /files/sysctl.conf
set $conf/net.ipv4.ip_unprivileged_port_start "53"
save
EOF

echo -e "done${_RESET_}"

